# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amanah_digital
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (Development - Ethereal)
EMAIL_FROM=noreply@amanahdigital.com
EMAIL_FROM_NAME=Amanah Digital

# Email Configuration (Production - SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_SECURE=false

# File Upload Configuration
FILE_UPLOAD_PATH=./uploads
MAX_FILE_UPLOAD=50000000
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_RESET_EXPIRE=10
EMAIL_VERIFY_EXPIRE=24

# Logging
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Faraid Calculation
FARAID_PRECISION=2
FARAID_CURRENCY=IDR

# Will Generation
WILL_TEMPLATE_PATH=./templates/will
WILL_OUTPUT_PATH=./generated/wills

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Two-Factor Authentication
TWO_FA_ENABLED=false
TWO_FA_ISSUER=Amanah Digital

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000